<Window x:Class="SinglePuncher.Classes.Views.InputBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SinglePuncher.Classes.Views"
        mc:Ignorable="d"
        Title="MDI Data Entry" Height="180" Width="400" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">

    <StackPanel>
        <TextBlock Name="messageTextBlock" Text="Message Example" FontSize="18" Margin="20,5"/>
        <TextBox Name="ValueTextBox" Text="0" BorderBrush="Black" FontSize="20" Width="150" HorizontalAlignment="Right" Margin="20,5" TextAlignment="Right" GotFocus="ValueTextBox_GotFocus" KeyDown="ValueTextBox_KeyDown" />
        <Button Name="AcceptButton" Width="100" Height="50" Margin="20,5" Content="OK" HorizontalAlignment="Right" Click="AcceptButton_Click"/>
    </StackPanel>
</Window>
